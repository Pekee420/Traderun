{
  "schemaVersion": 1,
  "id": "traderun",
  "version": "${version}",
  "name": "Traderun",
  "description": "Autonomous bot for villager trading halls. Handles multi-floor setups, automatic restocking/dumping, smart cooldowns (day/night aware), and profession filtering. Requires Baritone (pathfinding) and AutoTrade mod (trading whitelist).",
  "authors": ["Pekee420"],
  "license": "AGPL-3.0-or-later",
  "icon": "assets/traderun/icon.png",
  "environment": "client",
  "entrypoints": {
    "client": [
      "com.example.traderun.TradeRunClient"
    ]
  },
  "mixins": [
    "traderun.mixins.json"
  ],
  "depends": {
    "minecraft": "1.21.4",
    "java": ">=21",
    "fabricloader": ">=0.15.0",
    "fabric-api": "*"
  },
  "recommends": {
    "baritone": "*"
  },
  "suggests": {
    "modmenu": "*",
    "cloth-config2": "*"
  },
  "contact": {
    "sources": "https://github.com/Pekee420/TradeRun"
  }
}
